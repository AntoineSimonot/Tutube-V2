{% extends 'base.html.twig' %}

{% block title %}Admin videos{% endblock %}

{% block body %}
    <h1>Admin videos</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Created_at</th>
            <th>delete</th>
        </tr>
        </thead>
        <tbody>
        {% for video in videos %}
            <tr>
                <td><a href="{{ path('admin_video_show', {'id': video.id}) }}">{{ video.name }}</a></td>
                <td>{{ video.createdAt ? video.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    {{ include('video/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
    {{ knp_pagination_render(videos) }}

{% endblock %}
