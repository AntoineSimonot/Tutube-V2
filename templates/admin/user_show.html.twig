{% extends 'base.html.twig' %}

{% block javascripts %}<script type="text/javascript" src="{{ asset('asset/script.js') }}"></script>{% endblock %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>
    <a href="{{ path('admin_user_index') }}">-> back to list</a>

    <table class="table">
        <tbody>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Firstname</th>
            <td>{{ user.firstname }}</td>
        </tr>
        <tr>
            <th>Lastname</th>
            <td>{{ user.lastname }}</td>
        </tr>
        <tr>
            <th>Pseudo</th>
            <td>{{ user.pseudo }}</td>
        </tr>
        <tr>
            <th>Supprimer</th>
            <td>{{ include('user/_delete_form.html.twig') }}</td>
            <td><a href="{{ path('user_edit', {'id': user.id}) }}">edit</a></td>
        </tr>
        </tbody>
    </table>


    {% for video in user.videos %}
        <div style="padding: 10px 0;">
            <iframe width="420" height="315"
                    src="{{ video.link }}">
            </iframe>
            {{ include('video/_delete_form.html.twig') }}
        </div>
    {% endfor %}

{% endblock %}
